<launch>

  <node pkg="slam_toolbox" type="lifelong_slam_toolbox_node" name="slam_toolbox" output="screen">
    <rosparam command="load" file="$(find slam_toolbox)/config/mapper_params_lifelong.yaml" />
    <param name="odom_frame" value="$(env ROS_HOSTNAME)/odom"/>
    <param name="base_frame" value="$(env ROS_HOSTNAME)/base_footprint"/>
    <param name="scan_topic" value="/$(env ROS_HOSTNAME)/scan"/>
    <remap from="/map" to="/$(env ROS_HOSTNAME)/map"/>


  </node>

</launch>
